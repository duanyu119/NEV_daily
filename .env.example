# 环境变量配置
# 复制此文件为 .env 并填写实际配置

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=nev_user
DB_PASSWORD=your_secure_password_here
DB_NAME=nev_intelligence

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 系统配置
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# 数据采集配置
COLLECTION_START_TIME=06:00
COLLECTION_DEADLINE=18:00
MIN_DATA_QUALITY=70
MIN_RELEVANCE_SCORE=60
MAX_RETRY_ATTEMPTS=3
REQUEST_TIMEOUT=30000

# 输出配置
OUTPUT_FORMATS=html,json,markdown
SAVE_TO_DATABASE=true
SAVE_TO_FILE=true
REPORTS_PATH=./reports

# API密钥（如需使用第三方API）
WEIBO_API_KEY=
LINKEDIN_API_KEY=
NEWS_API_KEY=

# 邮件通知配置（可选）
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFICATION_EMAIL=
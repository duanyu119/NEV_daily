    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "date-fns": "^2.30.0",
    "mysql2": "^3.6.0",
    "puppeteer": "^21.5.0",
    "natural": "^6.10.0",
    "sentiment": "^5.0.2",
    "winston": "^3.11.0",
    "dotenv": "^16.3.0",
    "bull": "^4.11.0",
    "redis": "^4.6.0",
    "cron": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/axios": "^0.14.0",
    "@types/cheerio": "^0.22.0",

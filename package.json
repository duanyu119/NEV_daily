    "@types/sentiment": "^5.0.0",
    "@types/winston": "^2.4.0",
    "@types/cron": "^2.4.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0",
    "wrangler": "^3.0.0"

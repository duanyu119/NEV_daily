{
  "name": "nev-intelligence-system",
  "version": "1.0.0",
  "description": "新能源汽车行业情报收集与分析系统",
  "main": "dist/controller/nev_intelligence_controller.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/controller/nev_intelligence_controller.js",
    "dev": "ts-node src/controller/nev_intelligence_controller.ts",
    "test": "jest",
    "test:cpca": "ts-node src/collectors/cpca_collector.ts",
    "test:platform": "ts-node src/collectors/vertical_platform_monitor.ts",
    "test:leader": "ts-node src/collectors/industry_leader_tracker.ts",
    "test:template": "ts-node src/templates/data_standardization_template.ts",
    "lint": "eslint src/**/*.ts",
    "check": "tsc --noEmit",
    "deploy": "wrangler pages deploy ./reports --project-name nev-daily-news --branch main"
